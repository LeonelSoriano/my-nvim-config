!! Appearance
urxvt.termName: rxvt-unicode
URxvt.depth: 32
urxvt.scrollBar: true
urxvt.background: black
urxvt.foreground: gray
!! Font prefferenes

!URxvt*font: xft:DejaVu Sans Mono for Powerline:size=11

!urxvt.font: xft:DejaVu Sans Mono:pixelsize=16
!urxvt.boldFont: xft:DejaVu Sans Mono:pixelsize=16:weight=bold
URxvt*font: xft:Hack:size=12, xft:Inconsolata Nerd Font Mono:size=12

urxvt.letterSpace: -1
!! Larger history limit
urxvt.saveLines: 1000000


!! Yeah, I am one of those, who use these keys in Vim :-(
urxvt.keysym.Home:          \033[1~
urxvt.keysym.End:           \033[4~
urxvt.keysym.Control-Up:    \033[1;5A
urxvt.keysym.Control-Down:  \033[1;5B
urxvt.keysym.Control-Left:  \033[1;5D
urxvt.keysym.Control-Right: \033[1;5C

Urxvt*secondaryScroll: true # Enable Shift-PageUp/Down in screen


! Perl extension config
	.perl-ext-common: default
URxvt.perl-ext: tabbed


URxvt.iso14755: false
URxvt.iso14755_52: false

! Tabbed extension configuration
URxvt.tabbed.tabbar-fg: 8
URxvt.tabbed.tabbar-bg: 0
URxvt.tabbed.tab-fg:    15
URxvt.tabbed.tab-bg:    8

URxvt.tabbed.new-button: false
URxvt.tabbed.autohide: true

URxvt.tabbed.no-tabbedex-keys: true


URxvt.keysym.Shift-Control-V: eval:paste_clipboard
URxvt.keysym.Shift-Control-C: eval:selection_to_clipboard
